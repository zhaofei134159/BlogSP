	width:100%;
	height:3.0rem;
	background:#eee;
	align-items: center;
	display: flex;
}
.search{
	background:#fff;
	margin:0 auto;
	width:89%;
	height:1.9rem;
	border-radius:0.2rem;
	display: flex;
	flex-direction:column;
	padding-left:1rem;
}
.nav{
	margin:0.4rem 0rem;
}
.swiper {
  width: 100%;
  height:10rem;
}
.img {
	width:100%;
	height:100%;
}
.works{
	width:100%;
	background:#fff;
}
.work{
	width:99%;
	display: flex;
}
.work-all{
	padding:0.6rem 0.6rem;
	border-bottom: solid 1rpx #ccc;
	display: flex;
	flex-direction: row;
}
