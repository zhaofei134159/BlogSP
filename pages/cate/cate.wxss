/* pages/home/home.wxss */
.all {
	width:100%;
	height:100%;
}
.section{
	width:100%;
	height:3.0rem;
	background:#eee;
	align-items: center;
	display: flex;
}
.search{
	background:#fff;
	/*margin:0 auto;*/
	width:79%;
	height:1.9rem;
	border-radius:0.2rem;
	display: flex;
	flex-direction:column;
	padding-left:1rem;
	margin-left:0.5rem;
}
.search-cancel{
	width:20%;
	text-align:center;
	color:#CD5C5C;
}
.tags{
	width:96%;
	margin:0 auto;
	padding-top:1rem;
	color:#808080;
}
.tags-title{
	padding-left:0.5rem;	
	padding-bottom:0.5rem;
	font-size:1rem;
}
.tags-cont{
	width:100%;
	display: flex;
	flex-direction: row;
    flex-wrap: wrap;
    position: relative;
}
.tag {
	padding:0.25rem 0.9rem;
	border-radius:0.2rem;
	display:block;
	margin:0.3rem 0.4rem;
	text-align:center;
	background:#eee;
}
.works{
	width:100%;
	background:#fff;
}
.work{
	width:99%;
	display: flex;
}
.work-all{
	padding:0.6rem 0.6rem;
	border-bottom: solid 1rpx #ccc;
	display: flex;
	flex-direction: row;
}
.work-img{
	width:33%;
	display: flex;
	height:8rem;
	border-radius: 0.5rem;
	margin:0rem 0.4rem;
}
.work-desc{
	width:62%;
}
.work-title{
	width:80%;
	height:2rem;
	font-size:1.1rem;
	overflow: hidden;
   	white-space: nowrap;
    text-overflow:ellipsis;
}
.work-cont{
	width:97%;
	height:4rem;
	overflow: hidden;
    text-overflow:ellipsis;
    font-size:0.75rem;
	color:#696969;
	margin-bottom:1rem;
}
.work-sign{
	width:100%;
	height:1rem;
    font-size:0.75rem;
	color:#696969;
	font-size: 0.66rem;
}
.works-tags{
	width:96%;
    overflow-x: auto;
	height:4rem;
	margin:0 auto;
   	white-space: nowrap;
}
.works-tag{
	display: inline-block;
	height: 3rem;
    line-height: 3rem;
    border-bottom:0.1rem solid #ccc;
    padding:0rem 1.5rem;
	text-align:center;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.work-active{
	color: #CD5C5C;
	border-bottom: 0.1rem solid #CD5C5C;
}