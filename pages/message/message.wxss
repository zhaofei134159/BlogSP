/* pages/message/message.wxss */
.all {
  width:100%;
  height:100%;
}
.input-view{
  position:fixed;
  bottom:0rem;
  width:100%;
  height:3rem;
  background:#eee;
  text-align:center;
  display: flex;
  margin:0 auto;
}
.send{
  width:78%;
  height:2rem;
  margin:0.5rem;
  background:#fff;
  border-radius:0.3rem;
  /*display:flex;*/
  text-align:left;
  padding-left:0.7rem;
}
.input-chart{
  width:17%;
  display: flex;
  flex-direction:row;
  text-align:center;
}
.add{
  display:block;
  display:flex;
  width:1.5rem;
  height:1.5rem;
  line-height:1.7rem;
  margin:0.8rem 0rem 0rem 0.8rem;
}

/*对话框*/
.chat-box{
  border:solid 0.15rem #ccc;
  border-bottom:none;
  margin:0rem 0.3rem;
  min-height:40rem;
}
.chat-user-msg{
  width:100%;
}
.someone{
  float:left;
}
.me{
  float:right;
}
.chat-user{
  height:2rem;
  width:2rem;
  margin:0.8rem 0.5rem;
  border: solid 0.05rem #ddd;
}
.chat-msg {
  width: 150px;
  min-height: 20px;
  background: #25a23b;
  border-radius: 5px;
  line-height: 50px;
  margin-left: 10px;
  word-break: break-word;
  color: white;
  padding: 5px;
  line-height: 18px;
  width:50%;
  margin:0.8rem 0.2rem 0rem;
}