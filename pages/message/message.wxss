.all {
  width:100%;
  height:100%;
}
.input-view{
  position:fixed;
  bottom:0rem;
  width:100%;
  height:3rem;
  background:#eee;
  text-align:center;
  display: flex;
  margin:0 auto;
}
.send{
  width:78%;
  height:2rem;
  margin:0.5rem;
  background:#fff;
  border-radius:0.3rem;
  display: flex;
}
.input-chart{
  width:17%;
  display: flex;
  flex-direction:row;
  text-align:center;
}
.add{
  display:block;
  display:flex;
  width:1.5rem;
  height:1.5rem;
  line-height:1.7rem;
  margin:0.8rem 0rem 0rem 0.8rem;
}