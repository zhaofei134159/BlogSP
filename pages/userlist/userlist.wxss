/*------*/
.all {
	width:100%;
	height:100%;
}
.section{
	width:100%;
	height:3.0rem;
	background:#eee;
	align-items: center;
	display: flex;
	border-bottom:solid 0.1rem #ddd;
}
.search{
	background:#fff;
	margin:0 auto;
	width:89%;
	height:1.9rem;
	border-radius:0.2rem;
	display: flex;
	flex-direction:column;
	padding-left:1rem;
}
.userlist{
	width:100%;
	margin:0 auto;
	text-align:center;
	flex-direction:column;
	display: flex;
	overflow-x: hidden;
}
.user{
	width:97%;
	height:4.0rem;
	/*background:#eee;*/
	align-items: center;
	display: flex;
	overflow-y: hidden;
	padding:0.5rem;
	border-bottom:solid 0.1rem #ddd;
}
.user-avatar{
	width: 19%;
	height: 3.5rem;
	margin: 1.3rem;
	border-radius: 50%;
}
.user-info{
	display: flex;
	flex-direction:column;
	padding:0.3rem;
	text-align:left;
}
.user-name{
	font-size:1.2rem;
}
.user-status{
	font-size:0.9rem;
	margin-top:0.4rem;
}
.mask{
	position: absolute;
	top: 0%;
	left: 0%;
	width: 100%;
	height: 100%;
	background-color: #ddd;
	z-index: 1001;
	-moz-opacity: 0.7;
	opacity: 0.70;
	filter: alpha(opacity=70);
}
.grant{
	position:fixed;
	width:80%;
	background:white;
	top:35%;
	left:10%;
	z-index:1010;
}