/* pages/home/home.wxss */
@import "../../wxParse/wxParse.wxss";
.all {
	width:100%;
}
.work-img{
	width:92%;
	height:10rem;
	margin:0 auto;
	padding-bottom: 0.8rem;
}
.work-img image{
	width:100%;
	height:100%;
	border-radius: 0.7rem;
	display:block;
}
.word-cont{
	width:92%;
	margin:0 auto;
}
.work-title{
	width:100%;
	text-align:center;
	font-size:1.2rem;
	font-weight:bold;
	padding-bottom:0.5rem;
	border-bottom:solid 0.01rem #ccc;
}
.work-sign{
	width:100%;
	text-align:center;
	padding-top:0.5rem;
	font-size:0.9rem;
	color:#808080;
	padding-bottom:1rem;
}
.work-sign text{
	padding:0rem 0.5rem;
}
.work-desc{
	padding-bottom: 4rem;
}